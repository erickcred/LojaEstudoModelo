@{
    Layout = null;
}
@model ECommerce.ViewModels.LoginViewModel

<link href="bootstrap-5.1.3-dist/css/bootstrap.min.css" rel="stylesheet">
<link href="css/login.css" rel="stylesheet">

<section class="d-flex h-100 text-center text-white bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Nome Empresa</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    <a class="nav-link" href="#">Suporte</a>
                    <a class="nav-link" href="#">Contato</a>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <h1>Nome da Página</h1>
            <p class="lead">Texto para se apresentado na parte de cima do forms de login.</p>


            <form class="login text-secondary" action="/login-validar" method="post">
                

                <div class="form-floating">
                    <input type="email" class="form-control" name="Email" placeholder="nome@hotmail.com">
                    <span asp-validation-for="Email"></span>
                    <label for="Email">E-mail</label>
                </div>
                <div class="form-floating mt-4 mb-4">
                    <input type="password" class="form-control" name="Senha" placeholder="Senha">
                    <span asp-validation-for="Email"></span>
                    <label for="Senha">Senha</label>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-secondary fw-bold border-white bg-white" type="submit">Entrar</button>

                <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
            </form>

            @* <p class="lead">
                <a href="/adm" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Entrar</a>
            </p> *@


        </main>

        <footer class="mt-auto text-white-50">
            @* <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a
                href="https://twitter.com/mdo" class="text-white">mdo</a>.</p> *@
        </footer>
    </div>

</section>
