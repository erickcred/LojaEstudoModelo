            <p class="text-muted">@Model.Description</p>

            <div class="product-price">
                <span class="text-danger fw-bold fs-6">De: <del>@Model.GetTotal().ToString("C")</del></span>
                <span class="text-success fw-bold fs-5">Por: <inst>@Model.GetTotal().ToString("C")</inst></span>
            </div>
        </div>

        <div class="col-md-6">
            <img style="width: 100%" src="@Model.Image" alt="@Model.Name">
        </div>
    </div>

</section>