<script>
    function AutoDropdown() {
        let menuDropdown = document.querySelector(".nav-item.dropdown");

        menuDropdown.addEventListener("mouseover", () => {
            document.querySelector(".nav-link.dropdown-toggle").classList.add("Show")
            document.querySelector(".dropdown-menu").classList.add("show");
        })
        menuDropdown.addEventListener("mouseout", () => {
            document.querySelector(".nav-link.dropdown-toggle").classList.remove("Show")
            document.querySelector(".dropdown-menu").classList.remove("show");
        })
    }
    AutoDropdown()
</script>