@using System.Globalization
@model AspNetInicio.Models.Produto



<a href="/adm/produtos" class="btn btn-secondary mt-3 mb-3">Voltar</a>

<div class="container mt-5 mb-5">

    <form class="row g-3" action="/adm/update-estoque" method="post">

        <input hidden type="number" name="Id" value="@Model.Id" />
        
        <label><strong>Id:</strong> <span name="Id">@Model.Id</span></label> 
        <label><strong>Produto:</strong> <span>@Model.Name</span></label> 
        <label><strong>Estoque Atual:</strong> <span>@Model.QuantityInStok</span></label>

        <div class="col-md-6">
            <label for="QuantityInStok" class="form-label">Estoque para entrada</label>
            <input type="number" name="QuantityInStok" class="form-control">
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Atualizar Estoque</button>
        </div>
    </form>

</div>
@Model.Price.ToString("F2", CultureInfo.InvariantCulture)

